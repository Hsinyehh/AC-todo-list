<ul class="list-group">
  {{# each todos}}
  <li class="list-group-item">
    <div class="row">
      <div class=" col-auto mr-auto">
        <input style="vertical-align: middle;" type="checkbox" name="isDone" {{#if this.isDone}}checked{{/if}} disabled>
        {{this.name}}
      </div>
      <div class="col-auto">
        <a class="btn btn-outline-primary" href="./todos/{{this._id}}">detail</a>
        <a class="btn btn-outline-primary" href="./todos/{{ this._id }}/edit">edit</a>
        <form action="./todos/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
          <button class="btn btn-outline-danger" type="submit">delete</button>
        </form>
      </div>
    </div>
  </li>
  {{/ each}}
</ul>